<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_activity_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="cn.ipathology.dp.activity.user.PersonalActivity"
    tools:ignore="RtlCompat">

    <RelativeLayout
        android:id="@+id/ture_realayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/personal_linear_head"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:background="@drawable/setting_buttom_top"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/personal_relative_author"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@drawable/setting_top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="头像"
                        android:textColor="#333333" />


                    <ImageView
                        android:id="@+id/personal_img_author_go"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_btn_search_go"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/personal_img_author"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="31dp"
                        android:layout_marginRight="31dp" />
                    　　
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personal_relative_phone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/setting_top">
                    <TextView
                        android:id="@+id/personal_txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="手机"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/personal_txt_phone2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toLeftOf="@+id/personal_img_sex"
                        android:layout_toStartOf="@+id/personal_img_sex"
                        android:gravity="center"
                        android:singleLine="true"
                        android:maxLength="11"
                        android:textColor="#999999" />

                    <ImageView
                        android:id="@+id/personal_img_sex"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_btn_search_go"
                        android:visibility="gone" />

                    　　
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personal_relative_sex"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/setting_top">

                    <TextView
                        android:id="@+id/personal_txt_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="性别"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/personal_txt_sex2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toLeftOf="@+id/imageView4"
                        android:layout_toStartOf="@+id/imageView4"
                        android:gravity="center"
                        android:singleLine="true"
                        android:maxEms="3"
                        android:text="男"
                        android:textColor="#999999" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_btn_search_go"
                        android:visibility="gone" />

                    　　
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/personal_linear_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_linear_head"
                android:layout_marginTop="35dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/personal_relative_unit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_top">

                    <TextView
                        android:id="@+id/personal_txt_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="单位"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/personal_txt_unit2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/personal_txt_unit"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toLeftOf="@+id/imageView3"
                        android:layout_toStartOf="@+id/imageView3"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxEms="11"
                        android:singleLine="true"
                        android:textColor="#999999" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_btn_search_go"
                        android:visibility="gone" />

                    　　
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personal_relative_positional"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_top">

                    　　

                    <TextView
                        android:id="@+id/personal_text_positional2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toLeftOf="@+id/imageView9"
                        android:layout_toStartOf="@+id/imageView9"
                        android:gravity="center"
                        android:textColor="#999999" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_btn_search_go"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/personal_text_positional1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="职称"
                        android:textColor="#333333" />
                    　　
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personal_relative_office"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_top">

                    <TextView
                        android:id="@+id/personal_txt_office1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="职务"
                        android:textColor="#333333" />
                    　　

                    <TextView
                        android:id="@+id/personal_txt_office2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="30dp"
                        android:layout_toLeftOf="@+id/imageView01"
                        android:layout_toStartOf="@+id/imageView01"
                        android:gravity="center"
                        android:textColor="#999999" />

                    <ImageView
                        android:id="@+id/imageView01"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_btn_search_go"
                        android:visibility="gone" />
                    　　
                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/personal_relative_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_linear_body"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="35dp"

                android:background="@drawable/setting_top">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@mipmap/ic_btn_search_go"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/personal_txt_introduction1"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="简介"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/personal_txt_introduction2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="10dp"
                        android:layout_marginRight="31dp"
                        android:paddingTop="5dp"
                        android:textColor="#999999" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/truename_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="努力加载中..."
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>
