<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_radia_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/diagnosis_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="是否需要接诊?"
            android:textColor="#333333"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/diagnosis_dialog_cancel"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:background="@drawable/diagnosis_dialog_bian_blue"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/normal"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/diagnosis_dialog_ok"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/login_round_all_blue_press"
                android:gravity="center"
                android:text="确认"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
