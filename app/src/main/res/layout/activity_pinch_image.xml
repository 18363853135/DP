<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#10100f"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/news_pinchImage_linearLayout_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10100f">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/news_pinchImage_linearLayout_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/teach_back"
                android:layout_marginLeft="14dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_nav_return_normal"
                />
            <TextView

                android:id="@+id/news_pinchImage_linearLayout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textColor="#FFF"
                android:text="更多"/>
        </LinearLayout>t>
    </RelativeLayout>
    <cn.ipathology.dp.util.PinchImageViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/news_pinchImage_linearLayout_bar">

    </cn.ipathology.dp.util.PinchImageViewPager>
    <TextView
        android:id="@+id/news_pinchImage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:background="#e0000000"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>