<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    tools:context=".activity.user.ChangePhoneActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@drawable/setting_buttom_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_top"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="原手机"
                android:textColor="@color/titleColor"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/phone_old_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical"
                android:inputType="number"
                android:textColor="@color/secondTitleColor"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_top">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新手机"
                android:textColor="@color/titleColor"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/phone_new_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:ems="10"
                android:hint="请输入手机号码"
                android:inputType="number"
                android:textColor="@color/secondTitleColor"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_top">

            <TextView
                android:id="@+id/code1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/titleColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/phone_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_toLeftOf="@+id/phone_getCode"
                android:layout_toRightOf="@+id/code1"
                android:layout_toStartOf="@+id/phone_getCode"
                android:layout_weight="9"
                android:background="@null"
                android:gravity="center|left"
                android:hint="请输入验证码"
                android:lines="1"
                android:paddingLeft="5dp"
                android:textColor="@color/secondTitleColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phone_getCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#000"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>